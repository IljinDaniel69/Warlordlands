<div class="form-container">
    <h2>Edit <%= displayName %></h2>

    <form method="POST" action="/admin/<%= tableName %>/edit/<%= item.tyyppi %>">
        <% Object.keys(item).forEach(function(column) { %>
            <% if (column !== 'tyyppi' && !column.includes('created_at') && !column.includes('updated_at')) { %>
                <div class="form-group">
                    <label for="<%= column %>"><%= column %>:</label>
                    <input 
                        type="text" 
                        id="<%= column %>" 
                        name="<%= column %>" 
                        class="form-control" 
                        value="<%= item[column] %>" 
                        required>
                </div>
            <% } %>
        <% }); %>

        <!-- Hidden field for the primary key (tyyppi) -->
        <input type="hidden" name="tyyppi" value="<%= item.tyyppi %>">

        <div style="margin-top: 2rem;">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a href="/admin/<%= tableName %>" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>